@model IEnumerable<GestionUsarios.Models.TblAlumno>

@{
    ViewData["Title"] = "Index";
    Layout="~/Views/Shared/Template/_Layoutprivate.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AlmNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlmApellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlmCreditos)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AlmNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlmApellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlmCreditos)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PkAlmIdAlumno">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PkAlmIdAlumno">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PkAlmIdAlumno">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
